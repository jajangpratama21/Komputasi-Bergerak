<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LatihanLayoutActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0"
                    android:layout_weight="1"
                    android:text="Text 1"
                    android:background="#1abc9c"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="0"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Text 2"
                        android:background="#34495e"/>
                    <TextView
                        android:layout_width="0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Text 4"
                        android:background="#7f8c8d"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 3"
                android:layout_weight="1"
                android:background="#8e44ad"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 5"
                android:layout_weight="1"
                android:background="#3498db"/>
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 6"
                android:layout_weight="3"
                android:background="#2980b9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 7"
                android:layout_weight="1"
                android:background="#f1c40f"/>
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 8"
                android:layout_weight="1"
                android:background="#e67e22"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 9"
                android:layout_weight="1"
                android:background="#ecf0f1"/>
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 10"
                android:layout_weight="2"
                android:background="#bdc3c7"/>
            <TextView
                android:layout_width="0"
                android:layout_height="match_parent"
                android:text="Text 11"
                android:layout_weight="1"
                android:background="#95a5a6"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:text="Text 12"
                    android:layout_weight="1"
                    android:background="#9b59b6"/>

                <LinearLayout
                    android:layout_width="0"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0"
                        android:layout_weight="1"
                        android:text="Text 13"
                        android:background="#16a085"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Text 14"
                            android:background="#e74c3c"/>
                        <TextView
                            android:layout_width="0"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Text 15"
                            android:background="#c0392b"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="Text 16"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
